<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingBottom="100dp"
                android:background="@drawable/card">

    <TextView
        android:id="@+id/department_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textColor="@color/textDark"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:text="CSE"/>

	<TextView
		android:id="@+id/course_number"
        android:layout_toRightOf="@id/department_code"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_margin="5sp"
		android:textColor="@color/textDark"
		android:textSize="30sp"
        android:text="123"/>


    <TextView
        android:id="@+id/section_id"
        android:layout_toRightOf="@id/course_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textDark"
        android:layout_margin="5sp"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:text="AA"/>


    <TextView
        android:id="@+id/course_credits"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/department_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:text="5"/>

    <TextView
        android:id="@+id/credits"
        android:layout_toLeftOf="@id/course_credits"
        android:layout_alignBaseline="@id/department_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:text="cr:"/>

    <TextView
        android:id="@+id/course_type"
        android:layout_toLeftOf="@id/credits"
        android:layout_alignBaseline="@id/department_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:text="LC"/>

    <TextView
		android:id="@+id/course_title"
        android:layout_below="@id/course_number"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
		android:textColor="@color/textDark"
		android:textSize="25sp"
        android:textAllCaps="true"
        android:text="intro to programming"/>



</RelativeLayout>